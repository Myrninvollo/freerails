<!--
    Typical usage:

    <?xml version="1.0"?>

    <!DOCTYPE Tiles SYSTEM "tiles_Tiles.dtd">

    <Tiles>
    ...
    </Tiles>
-->
<!-- specials are tile types that, in a sense, extend another type.  E.g. habour is a special of ocean.-->

  <!ELEMENT specials (Tile)*>

  <!ELEMENT Type EMPTY>
  <!ATTLIST Type
    rgb CDATA #IMPLIED
  >

  
  <!ELEMENT Tile (specials|treatTheseAsTheSameType)*>
  <!ATTLIST Tile
    tileSelector (Standard | Chequered | RiverStyle | special | ForestStyle ) #REQUIRED
    Type CDATA #REQUIRED
    rgb CDATA #REQUIRED
    Y CDATA #REQUIRED
    X CDATA #REQUIRED
  >
  
  <!-- Some tile types need to be treated the same as others when the map is drawn.  E.g. rivers flow into the ocean, so 
  river tiles need to treat ocean tiles as the same type-->
  <!ELEMENT treatTheseAsTheSameType (Type)*>

  <!ELEMENT Tile_set (Tile)*>
  <!ATTLIST Tile_set
    Width CDATA #REQUIRED
    Class CDATA #IMPLIED
    Y CDATA #REQUIRED
    Height CDATA #REQUIRED
    X CDATA #REQUIRED
  >

  <!ELEMENT Tiles (Tile_set)*>
